#include <stdio.h>

int main() {
    int num, sum = 0, digit;

    // Taking input from user
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    // To compute the sum of the individual numbers
    while (num > 0) {
        digit = num % 10;
        sum += digit;
        num /= 10;
    }

    // To display the result
    printf("Sum of digits: %d\n", sum);

    return 0;
}
