#include <stdio.h>

int main() {
    int rows, i, j;

    // Ask user for the number of rows in the first half
    printf("Enter the number of rows for the upper part: ");
    scanf("%d", &rows);

    // Printing the increasing pattern
    for(i = 1; i <= rows; i++) {
        for(j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    // Printing the decreasing pattern
    for(i = rows - 1; i >= 1; i--) {
        for(j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
