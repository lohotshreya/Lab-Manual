#include <stdio.h>

int main() {
    float percentage;
    //To read percentage from input
    printf("Enter Percentage of marks: ");
    scanf("%f", &percentage);
    // To find which class is awarded
    if (percentage<40){
        printf("You have failed. \n");
    }
    else if (percentage>=40 && percentage<60){
        printf("You have got second class.\n");
    }
    else if (percentage>=60 && percentage<70){
        printf("You have got first class. \n");
    }
    else if (percentage>=70){
        printf("You have got distinction!\n");
    }
    else {
        printf("You have entered invalid percentage.");
    }
    return 0;
}
